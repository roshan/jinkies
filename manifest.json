{
  "manifest_version": 2,
  
  "name": "Jinkies",
  "description": "This extension makes JIRA project references linkable.",
  "version": "0.2",

  "content_scripts": [
    {
      "matches": ["https://git.liveramp.net/*"],
      "css": ["jink.css"],
      "js": ["jquery-3.1.1.min.js", "jink.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "https://*/*",
    "storage"
  ],

  "options_page": "options.html"
}
