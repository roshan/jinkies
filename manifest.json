{
  "manifest_version": 2,
  
  "name": "Jinkies",
  "description": "This extension makes JIRA project references linkable.",
  "version": "0.4",

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": ["jinkies.css"],
      "js": ["jinkies.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ],

  "optional_permissions": [
    "activeTab",
    "https://*/*"
  ],

  "options_page": "options.html"
}
